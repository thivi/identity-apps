{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "jsx": "react",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
		"downlevelIteration": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules", 
        "test-configs",
        "src/**/tests/*"
    ]
}
